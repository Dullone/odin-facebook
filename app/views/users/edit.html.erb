<h2>Edit profile</h2>
<div class="errors">
<% @user.errors.full_messages.each do |msg| %>
  <div class="error-message"><%= msg %></div>
<% end %>
</div>

<div class="update-user">
  <%= form_for @user do |f| %>
    <%= f.label :location %><br/>
    <%= f.text_area :location %><br/>

    <%= f.label :job %><br/>
    <%= f.text_field :job %><br/>

    <%= f.label :interests %><br/>
    <%= f.text_area :interests %><br/>

    <%= f.submit "Update profile" %>
  <% end %>
</div>